<?xml version="1.0" encoding="utf-8" ?>
<!--  This is the chrome (as in the window around the WebContent, it is the browser window itself (borders, navigation, address bar, etc).  -->
<!--  Not to be confused with the browser from Google  -->
<Window
    x:Class="Horizon.WindowChrome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:favorites="using:Horizon.Modules.Favorites"
    xmlns:local="using:Horizon.Controls.Tabs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkitc="using:CommunityToolkit.WinUI.Controls"
    xmlns:viewmodels="using:Horizon.ViewModels"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TitleBar
            x:Name="TitleBarControl"
            Title="Horizon"
            Grid.Row="0"
            x:FieldModifier="public">
            <TitleBar.IconSource>
                <ImageIconSource ImageSource="/Assets/AppIcons/Square44x44Logo.png" />
            </TitleBar.IconSource>
        </TitleBar>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition
                    Width="175"
                    MinWidth="185"
                    MaxWidth="400" />
            </Grid.ColumnDefinitions>
            <ContentPresenter
                x:Name="TabContentPresenter"
                Grid.Column="0"
                x:FieldModifier="public" />
            <Grid
                x:Name="Sidebar"
                Grid.Column="1"
                Margin="0,-1,5,3"
                x:FieldModifier="public">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Hidden">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ListView
                            x:Name="TabListView"
                            Grid.Row="0"
                            AllowDrop="True"
                            CanDrag="True"
                            CanReorderItems="True"
                            ItemsSource="{x:Bind viewmodels:SettingsViewModel.SettingsVM.Tabs, Mode=TwoWay}"
                            SelectionChanged="TabListView_SelectionChanged">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="local:Tab">
                                    <Grid PointerPressed="Grid_PointerPressed" ToolTipService.ToolTip="{x:Bind Title, Mode=OneWay}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="-2,-2,0,0"
                                            VerticalAlignment="Center"
                                            Text="{x:Bind Title, Mode=OneWay}"
                                            TextTrimming="CharacterEllipsis" />
                                        <Button
                                            Grid.Column="2"
                                            Margin="0,0,-4,0"
                                            HorizontalAlignment="Right"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Click="CloseTabButton_Click"
                                            Style="{StaticResource SidebarButton}">
                                            <Button.Content>
                                                <FontIcon
                                                    FontFamily="Segoe Fluent Icons"
                                                    FontSize="16"
                                                    Foreground="Gray"
                                                    Glyph="&#xE711;" />
                                            </Button.Content>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <Grid Grid.Row="2" Height="40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Button
                                Grid.Column="0"
                                HorizontalAlignment="Right"
                                HorizontalContentAlignment="Stretch"
                                Click="ToolbarButton_Click"
                                Style="{StaticResource QuietButton}"
                                Tag="NewTab">
                                <Button.Content>
                                    <FontIcon FontSize="16" Glyph="&#xE710;" />
                                </Button.Content>
                            </Button>
                            <AppBarSeparator Grid.Column="1" />
                            <Button
                                Grid.Column="2"
                                HorizontalAlignment="Left"
                                HorizontalContentAlignment="Stretch"
                                Click="ToolbarButton_Click"
                                Style="{StaticResource QuietButton}"
                                Tag="NewSplitTab">
                                <Button.Content>
                                    <FontIcon FontSize="16" Glyph="&#xF57C;" />
                                </Button.Content>
                            </Button>
                        </Grid>
                    </Grid>
                </ScrollViewer>
                <StackPanel
                    Grid.Row="1"
                    Margin="2,0,2,2"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        x:Name="FavoritesBtn"
                        Click="FavoritesFlyoutButton_Click"
                        Style="{StaticResource QuietButton}">
                        <Button.Content>
                            <FontIcon FontSize="16" Glyph="&#xE728;" />
                        </Button.Content>
                        <Button.Resources>
                            <Flyout x:Name="FavoritesFlyout">
                                <Grid Height="300">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        Margin="5,0,0,0"
                                        FontSize="20"
                                        FontWeight="SemiBold"
                                        Text="Favorites" />
                                    <ListView
                                        x:Name="FavoritesListView"
                                        Grid.Row="1"
                                        Width="300"
                                        ItemsSource="{x:Bind viewmodels:SettingsViewModel.SettingsVM.FavoritesList, Mode=TwoWay}"
                                        RightTapped="FavoritesListView_RightTapped"
                                        SelectionChanged="FavoritesList_SelectionChanged">
                                        <ListView.ItemTemplate>
                                            <DataTemplate x:DataType="favorites:FavoriteItem">
                                                <StackPanel Margin="-5,10,-5,10" ToolTipService.ToolTip="{x:Bind Url}">
                                                    <TextBlock
                                                        FontSize="16"
                                                        FontWeight="SemiBold"
                                                        Text="{x:Bind Title}"
                                                        TextTrimming="CharacterEllipsis" />
                                                    <TextBlock
                                                        FontSize="12"
                                                        Foreground="{ThemeResource SystemAccentColorDark1}"
                                                        Text="{x:Bind Url}"
                                                        TextTrimming="CharacterEllipsis" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                        <ListView.ContextFlyout>
                                            <CommandBarFlyout
                                                x:Name="FavoritesContextMenu"
                                                AlwaysExpanded="True"
                                                Placement="BottomEdgeAlignedLeft">
                                                <AppBarButton
                                                    Click="FavContextItem_Click"
                                                    Tag="Copy"
                                                    ToolTipService.ToolTip="Copy link">
                                                    <AppBarButton.Icon>
                                                        <FontIcon Glyph="&#xE16F;" />
                                                    </AppBarButton.Icon>
                                                </AppBarButton>
                                                <AppBarButton
                                                    Click="FavContextItem_Click"
                                                    Foreground="Red"
                                                    Icon="Delete"
                                                    Tag="Delete" />
                                                <CommandBarFlyout.SecondaryCommands>
                                                    <AppBarButton
                                                        Click="FavContextItem_Click"
                                                        Label="Copy link text"
                                                        Tag="CopyText">
                                                        <AppBarButton.Icon>
                                                            <FontIcon Glyph="&#xE16F;" />
                                                        </AppBarButton.Icon>
                                                    </AppBarButton>
                                                </CommandBarFlyout.SecondaryCommands>
                                            </CommandBarFlyout>
                                        </ListView.ContextFlyout>
                                    </ListView>
                                </Grid>
                            </Flyout>
                        </Button.Resources>
                    </Button>
                    <Button
                        Click="ToolbarButton_Click"
                        Style="{StaticResource QuietButton}"
                        Tag="Downloads">
                        <Button.Content>
                            <FontIcon FontSize="16" Glyph="&#xE896;" />
                        </Button.Content>
                    </Button>
                    <Button
                        Click="ToolbarButton_Click"
                        Style="{StaticResource QuietButton}"
                        Tag="History">
                        <FontIcon FontSize="16" Glyph="&#xE81C;" />
                    </Button>
                    <Button x:Name="ToolbarMoreBtn" Style="{StaticResource QuietButton}">
                        <Button.Content>
                            <FontIcon FontSize="16" Glyph="&#xE712;" />
                        </Button.Content>
                        <Button.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutItem
                                    Click="ToolbarFlyoutItem_Click"
                                    Icon="Setting"
                                    Tag="Settings"
                                    Text="Settings" />
                            </MenuFlyout>
                        </Button.Flyout>
                    </Button>
                </StackPanel>
            </Grid>
            <!--<toolkitc:GridSplitter
        Grid.Column="1"
        Width="12"
        HorizontalAlignment="Left"
        ResizeBehavior="BasedOnAlignment"
        ResizeDirection="Columns" />-->
        </Grid>
    </Grid>
</Window>
