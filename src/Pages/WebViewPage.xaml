<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Horizon.Pages.WebViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Horizon.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <Flyout x:Name="AddFavoriteFlyout" Placement="Right">
            <StackPanel>
                <TextBlock
                    Width="300"
                    Margin="0,0,0,8"
                    FontSize="20"
                    FontWeight="SemiBold">
                    Add favorite
                </TextBlock>
                <TextBox
                    x:Name="FavoriteTitle"
                    Width="300"
                    Margin="0,0,0,8"
                    Header="Title" />
                <TextBox
                    x:Name="FavoriteUrl"
                    Width="300"
                    Header="Url" />
                <Button
                    Margin="0,8,0,0"
                    Click="AddFavoriteButton_Click"
                    Content="Add"
                    Tag="AddFavorite" />
            </StackPanel>
        </Flyout>
        <Flyout x:Name="QRCodeFlyout" Placement="Right">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid CornerRadius="5">
                    <Image
                        x:Name="QRCodeImage"
                        Grid.Row="0"
                        Width="220"
                        Height="220" />
                </Grid>
                <StackPanel
                    Grid.Row="1"
                    Margin="0,10,0,-5"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <FontIcon Margin="0,0,10,0" Glyph="&#xE946;" />
                    <Button Click="QRCodeButton_Click">
                        <Button.Content>
                            <FontIcon Glyph="&#xE792;" />
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>
        </Flyout>
        <MenuFlyout x:Name="ContextMenu">
            <MenuFlyoutItem
                Click="ContextMenuItem_Click"
                IsEnabled="{x:Bind WebViewControl.CanGoBack, Mode=OneWay}"
                Tag="Back"
                Text="Back">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE112;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
            <MenuFlyoutItem
                Click="ContextMenuItem_Click"
                Tag="Refresh"
                Text="Refresh">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE149;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
            <MenuFlyoutItem
                Click="ContextMenuItem_Click"
                IsEnabled="{x:Bind WebViewControl.CanGoForward, Mode=OneWay}"
                Tag="Forward"
                Text="Forward">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE111;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
            <MenuFlyoutSeparator />
            <MenuFlyoutItem
                Click="ContextMenuItem_Click"
                Tag="SelectAll"
                Text="Select all">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE14E;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
            <MenuFlyoutItem
                Click="ContextMenuItem_Click"
                Tag="Save"
                Text="Save as">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE792;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
            <MenuFlyoutItem
                Click="ContextMenuItem_Click"
                Icon="Print"
                Tag="Print"
                Text="Print" />
            <MenuFlyoutSeparator />
            <MenuFlyoutItem
                Click="ContextMenuItem_Click"
                Tag="DevTools"
                Text="Inspect">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xEC7A;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
            <MenuFlyoutItem
                Click="ContextMenuItem_Click"
                Tag="ViewSource"
                Text="View page source">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE943;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
            <MenuFlyoutItem
                Click="ContextMenuItem_Click"
                Tag="TaskManager"
                Text="Task Manager">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE9D9;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
        </MenuFlyout>
        <MenuFlyout x:Name="TextContextMenu" Placement="BottomEdgeAlignedLeft">
            <MenuFlyoutItem
                Click="ContextMenuItem_Click"
                Tag="CopyText"
                Text="Copy text">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE16F;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
            <MenuFlyoutItem
                Click="ContextMenuItem_Click"
                Tag="SelectAll"
                Text="Select all">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE14E;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
            <MenuFlyoutItem
                Click="ContextMenuItem_Click"
                Tag="Search"
                Text="Search the web...">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE721;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
        </MenuFlyout>
        <MenuFlyout x:Name="LinkContextMenu" Placement="BottomEdgeAlignedLeft">
            <MenuFlyoutItem
                Click="ContextMenuItem_Click"
                Tag="OpenLnkInNewTab"
                Text="Open link in new tab">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE8A7;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
            <MenuFlyoutItem
                Click="ContextMenuItem_Click"
                Tag="Copy"
                Text="Copy link">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE16F;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
            <MenuFlyoutItem
                Click="ContextMenuItem_Click"
                Tag="CopyText"
                Text="Copy link text">
                <MenuFlyoutItem.Icon>
                    <FontIcon Glyph="&#xE16F;" />
                </MenuFlyoutItem.Icon>
            </MenuFlyoutItem>
        </MenuFlyout>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1" Style="{StaticResource PageBorder}">
            <!--  required to round wv2  -->
            <WebView2
                x:Name="WebViewControl"
                x:FieldModifier="public"
                CoreWebView2Initialized="WebViewControl_CoreWebView2Initialized"
                Loaded="WebViewControl_Loaded"
                Visibility="Collapsed" />
        </Grid>
        <StackPanel
            x:Name="Sidebar"
            Grid.Column="0"
            Margin="5,0,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center">
            <Button
                Click="SidebarButton_Click"
                IsEnabled="{x:Bind WebViewControl.CanGoBack, Mode=OneWay}"
                Style="{StaticResource SidebarButton}"
                Tag="Back"
                ToolTipService.ToolTip="Go back">
                <FontIcon FontSize="16" Glyph="&#xE112;" />
            </Button>
            <Button
                Click="SidebarButton_Click"
                Style="{StaticResource SidebarButton}"
                Tag="Refresh"
                ToolTipService.ToolTip="Refresh (F5)">
                <FontIcon FontSize="16" Glyph="&#xE149;" />
            </Button>
            <Button
                Click="SidebarButton_Click"
                IsEnabled="{x:Bind WebViewControl.CanGoForward, Mode=OneWay}"
                Style="{StaticResource SidebarButton}"
                Tag="Forward"
                ToolTipService.ToolTip="Go forward">
                <FontIcon FontSize="16" Glyph="&#xE111;" />
            </Button>
            <Button
                Click="SidebarButton_Click"
                Style="{StaticResource SidebarButton}"
                Tag="ToggleUrlBox"
                ToolTipService.ToolTip="Toggle url bar">
                <FontIcon FontSize="16" Glyph="&#xE721;" />
                <Button.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem
                            Click="ContextMenuItem_Click"
                            Tag="CopyPageLink"
                            Text="Copy link">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE8C8;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem
                            Click="ContextMenuItem_Click"
                            Tag="OpenLinkFromClipboard"
                            Text="Open link from clipboard">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE630;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                        <!--<MenuFlyoutItem
                            Click="ContextMenuItem_Click"
                            Tag="CopyCleanPageLink"
                            Text="Copy link (clean)">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE8C8;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>-->
                    </MenuFlyout>
                </Button.ContextFlyout>
            </Button>
            <Button
                Click="SidebarButton_Click"
                Style="{StaticResource SidebarButton}"
                Tag="ReadingMode"
                ToolTipService.ToolTip="Reading mode">
                <FontIcon FontSize="16" Glyph="&#xE736;" />
            </Button>
            <Button
                Click="SidebarButton_Click"
                Flyout="{x:Bind AddFavoriteFlyout}"
                Style="{StaticResource SidebarButton}"
                Tag="AddFavoriteFlyout"
                ToolTipService.ToolTip="Add site to favorites">
                <FontIcon FontSize="16" Glyph="&#xE734;" />
            </Button>
            <Button
                Click="SidebarButton_Click"
                Style="{StaticResource SidebarButton}"
                Tag="Downloads"
                ToolTipService.ToolTip="Downloads (Ctrl + J)">
                <FontIcon FontSize="16" Glyph="&#xE118;" />
            </Button>
            <Button
                Click="SidebarButton_Click"
                Style="{StaticResource SidebarButton}"
                Tag="GenQRCode"
                ToolTipService.ToolTip="Generate QR Code">
                <FontIcon FontSize="16" Glyph="&#xED14;" />
            </Button>
        </StackPanel>
        <Button
            x:Name="MuteBtn"
            Margin="5,0,0,5"
            VerticalAlignment="Bottom"
            Click="SidebarButton_Click"
            Style="{StaticResource SidebarButton}"
            Tag="Mute"
            ToolTipService.ToolTip="Mute"
            Visibility="Collapsed">
            <Button.Content>
                <FontIcon FontSize="16" Glyph="&#xE767;" />
            </Button.Content>
        </Button>
        <ProgressBar
            x:Name="LoadingBar"
            Grid.Column="1"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Stretch"
            Visibility="Collapsed" />
        <Grid
            x:Name="UrlBoxWrapper"
            Grid.Column="1"
            Width="500"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            x:FieldModifier="public"
            Background="{StaticResource ApplicationPageBackgroundThemeBrush}"
            CornerRadius="5"
            Visibility="Collapsed">
            <StackPanel
                BorderBrush="{StaticResource ControlElevationBorderBrush}"
                BorderThickness="2"
                CornerRadius="5">
                <TextBox
                    x:Name="UrlBox"
                    Height="32"
                    Margin="15"
                    GotFocus="UrlBox_GotFocus"
                    IsSpellCheckEnabled="False"
                    PlaceholderText="Type here to search or enter url"
                    Text="{x:Bind WebViewControl.Source, Mode=OneWay}">
                    <TextBox.KeyboardAccelerators>
                        <KeyboardAccelerator Key="Enter" Invoked="UrlBoxKeyboardAccelerator_Invoked" />
                        <KeyboardAccelerator Key="Escape" Invoked="UrlBoxKeyboardAccelerator_Invoked" />
                    </TextBox.KeyboardAccelerators>
                </TextBox>
                <!--  UrlBox Margin="15,15,15,5"  -->
                <!--<TextBlock Margin="15,0,15,0" Text="Suggested actions" />
                <StackPanel
                    Margin="15,4,10,15"
                    Orientation="Horizontal"
                    Spacing="4">
                    <Button Click="OpenUrlFromClipboard_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xE630;" />
                                <TextBlock Text="Paste from clipboard" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button Click="RestoreClosedTab_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xE7A7;" />
                                <TextBlock Text="Restore closed tab" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>-->
            </StackPanel>
        </Grid>

    </Grid>
</Page>
