        <Setter Property="Width" Value="30" />
        <Setter Property="Height" Value="30" />
        <Setter Property="Margin" Value="0,1,0,1" />
        <Setter Property="ToolTipService.Placement" Value="Right" />
        <Setter Property="Template">
